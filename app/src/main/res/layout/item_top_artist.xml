<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/top_item_artist_height">

    <ImageView
        android:id="@+id/imgCoverItemTopArtist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_dark_transparency"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtArtistNameItemTopArtist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/icons"
            android:textSize="26sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtPlayCountItemTopArtist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:drawableLeft="@drawable/ic_play_circle_outline_white_24dp"
                android:gravity="center"
                android:textColor="@color/icons" />

            <TextView
                android:id="@+id/txtListenerItemTopArtist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:drawableLeft="@drawable/ic_headset_white_24dp"
                android:gravity="center"
                android:textColor="@color/icons" />

        </LinearLayout>


    </LinearLayout>
</FrameLayout>